{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/settings**", 
        "run": {
          "serviceId": "dinner-backend",
          "region": "europe-west2"
        }
      },
      {
        "source": "/activity/**",
        "run": {
          "serviceId": "dinner-backend",
          "region": "europe-west2"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
